<%= header_title 'Dashboard' %>

<div class="container">
  <div class="row" id="dash_heading_equal">
    <div id="page-heading" class="col-lg-10 col-md-10 col-sm-8 col-xs-8">
      <%= page_title 'Dashboard' %>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-4 text-center" style="margin:auto;">
      <p>Publication List
      <% if @user.is_scraped %> <!-- If a scraping job is running -->
          <button class="refresh_publication refresh_url_dash_button btn btn-paircon">
            <i class="fa fa-refresh fa-2x" aria-hidden="true"></i>
          </button>
      <% elsif !@user.papers.blank? %> <!-- If the user has no papers -->
          <button class="refresh_publication refresh_url_dash_button btn btn-paircon">
            <i class="fa fa-refresh fa-2x" aria-hidden="true"></i>
          </button>
      <% else %>
          <span class="tooltip-wrapper text-center">
            <button class="refresh_publication_disabled refresh_url_dash_button btn btn-paircon disabled">
              <i class="fa fa-refresh fa-2x" aria-hidden="true"></i>
            </button>
          </span>
      <% end %>
      </p>
    </div>
  </div>
</div>

<hr>

<div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <%= render '/home/conferences_list' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-12 col-xs-12">
        <%= render '/home/notifications_list' %>
      </div>
      <div class="col-md-6 col-sm-12 col-xs-12">
        <%= render '/home/upcoming_events' %>
      </div>
    </div>
</div>
<%= javascript_tag "refreshProfileUrl()" %>
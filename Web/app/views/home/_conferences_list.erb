                    <br/>
                    <br/>
                    <br/>
                    <%= image_tag 'sad.png' %>
                    <div style="margin-top: 30px;">You are not attending any conference</div>
                  </div>
                  <% else %>
              <p> These are the list of conferences you are attending</p>
              <% end %>
                  <%if @conferences_organizer_list.length !=0 %>
                      <div class="menu_section">
                        <h3>ORGANIZING<span class="pull-right"><%= link_to icon_text('plus-circle'), conferences_path(view: 'organizer'), class: 'light-grey-text', style: 'margin-right: 5px;' %></span>
                        </h3>
                        <ul >
                          <% @conferences_organizer_list[0..5].each do |conference| %>
                              <li>
x                                <a id="<%= "organizing_conference_#{conference.id}" %>" href="<%= conference_path(conference) %>"><%= conference.get_name() %></a>
                              </li>
                          <% end %>
                        </ul>
                      </div>

              <% end %>


            </div>
</div>


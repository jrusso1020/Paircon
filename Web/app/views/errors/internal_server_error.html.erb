<%= header_title 'Internal Server Error' %>

<div class="container body error-page">
  <div class="main_container">
    <!-- page content -->
    <div class="page-container-responsive">
      <div class="row row-vertical-align">
        <div class="col-md-6 col-sm-12 col-xs-12 col-middle">
          <h1 class="text-jumbo text-ginormous hidden-sm-down error-text-quote">Oops!</h1>
          <h2 class="error-text-quote">Oh My! Something bad happened. We track these errors automatically</h2>
          <% if user_signed_in? %>
              <%= render 'search' %>
          <% end %>
          <h6 class="error-text-code">Error code: 500 Internal Server Error</h6>
          <ul class="list-unstyled">
            <li>Here are some helpful links instead:</li>
            <li><%= link_to 'Home', root_path(anchor: 'main-header'), :'data-no-pjax' => '' %></li>
            <li><%= link_to 'Privacy Policy', privacy_policy_home_index_url %></li>
            <li><%= link_to 'Terms of Use', terms_home_index_url %></li>
            <li><a href="<%= PairConConfig::url[:support] %>">Report this</a></li>
          </ul>
        </div>
        <div class="col-md-6 text-center hidden-sm hidden-xs">
          <%= image_tag 'errorimage.png', class: 'error-image' %>
        </div>
      </div>
    </div>
    <!-- /page content -->
  </div>
</div>
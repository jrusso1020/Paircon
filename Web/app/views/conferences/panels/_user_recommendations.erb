<% @papers_with_scores.each do |result| %>
  <div class ="col-md-4 col-sm-6 col-xs-6 top-buffer">
    <div class="usage-graph " style="transform: scale(1.2,1.2);">
      <div class="easypiechart" id="returningvisits" data-percent="<%= percentage.nan? ? 0 : (percentage*100).round(2) %>">
        <span class="percent"><%= result.similarity_score.nan? ? 0 : (result.similarity_score*100).round(2) %></span>
      </div>
      <label><%= link_to "#{result.conference_paper.title}", pdf.full_path(file: "#{result.conference_paper.pdf.url}", target: '_blank') %><br>
        <!--<p>-->
          <!--<a href="#"><i class="fa fa-thumbs-up right-buffer approve" aria-hidden="true"></i></a>-->
          <!--<a href="#"><i class="fa fa-thumbs-down deny" aria-hidden="true"></i></a>-->
        <!--</p>-->
      </label>
    </div>
    <div class = "text-center">
      <p>
        <b>Related To: </b><%= result[i].conference_paper.title%>
      </p>
      <button class="btn btn-paircon btn-center" type="button" data-toggle="modal" data-target=<%= "##{$i}"%>>More</button>
    </div>
    <div class="modal fade" id=<%= "#{$i}"%> tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Paper <%="#{$i}"%>
              <!--<a href="#"><i class="fa fa-thumbs-up right-buffer left-buffer approve" aria-hidden="true"></i></a>-->
              <!--<a href="#"><i class="fa fa-thumbs-down deny" aria-hidden="true"></i></a>-->
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class ="container">
              <div class="col-md-6 col-sm-6 col-xs-12">
                <p><b>Authors: </b><%= result.conference_paper.authors.join(", ")%></p>
              </div>
              <div class="col-md-6 col-sm-6 col-xs-12 text-center">
                <p><a href="#"><i class="fa fa-file fa-4x" aria-hidden="true"></i><br>Open Paper</a></p>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-paircon" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
        var count = <%= @papers_with_scores.count >= 3 ? 3 : @papers_with_scores.count %>;
        if (window.innerWidth < 768) {
            count = <%= @papers_with_scores.count >= 2 ? 2 : @papers_with_scores.count %>;
        }

        initCharts(count);
    </script>
<% end %>
<div class="x_panel">
  <div class="x_title">
    <h3>Papers
      <ul class="nav navbar-right panel_toolbox">
        <% if @is_organizer %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-plus"></i></a>
              <ul class="dropdown-menu text-center" role="menu">
                <li><a>Upload New Papers List</a></li>
                <li><%= link_to_modal 'Add Single Paper', new_paper_path(conference_id: @conference.id) %></li>
              </ul>
            </li>
        <% end %>
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
    </h3>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <% if @is_organizer %>
    <div class ="text-center">
      <button class = "btn btn-paircon left-buffer">Upload New Papers CSV</button>
      <button class = "btn btn-paircon">Add New Single Paper</button>
    </div>
    <% end %>
    <table id="datatable-papers" class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Authors</th>
          <th>Affiliation</th>
          <th>Publication</th>
          <th>Keywords</th>
          <th>Link</th>
          <% if @is_organizer %>
              <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render @conference.papers %>
      </tbody>
    </table>
  </div>
</div>
<script>
    $('#datatable-papers').DataTable();
</script>

<% if @is_organizer or (!@is_organizer and @total_resources != 0 and @total_events != 0) %>
    <h1>Schedule
      <ul class="nav navbar-right panel_toolbox">
        <% if @is_organizer %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="btn btn-paircon fa fa-plus"></i></a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to_modal 'Add Multiple Events / Papers', bulk_upload_conference_path(conference_id: @conference.id) %>
                </li>
                <hr style="margin-top: 5px; margin-bottom: 5px;"/>
                <li><%= link_to_modal 'Add Event', new_resource_schedules_path(conference_id: @conference.id, view: 'event') %></li>
                <li><%= link_to_modal 'Add Session', new_resource_schedules_path(conference_id: @conference.id, view: 'session') %></li>
              </ul>
            </li>
        <% end %>
      </ul>
    </h1>
    <hr/>

    <div class="clearfix"></div>
    <table class="table table-striped hidden">
      <!--<table class="datatable-schedule table table-striped">-->
      <% $days = %w(Thursday Friday) %>    <%# Make these dynamic. Should be days of conference%>
      <% $days.each do |day| %>
          <thead>
          <tr>
            <th><%= day %></th>
            <% $areas = %w(Location1 Location2 Location3 Location4 Location5) %>    <%# Make these dynamic. Should be areas of conference%>
            <% $areas.each do |area| %>
                <th><%= area %></th>
            <% end %>
          </tr>
          </thead>
          <% $timeslots = %w(08:30â€“09:30 09:30-10:30 10:30-13:00 13:00-15:00 15:00-18:00) %>
          <% $timeslots.each do |timeslot| %>
              <tbody>
              <tr>
                <th scope="row"><%= timeslot %></th>
                <% $i = 1 %>
                <% until $i > $areas.length do %>
                    <td><a href="#"><%= "Topic #{$i}" %></a></td>
                    <% $i +=1; %>
                <% end %>
              </tr>

          <% end %>
          </tbody>
      <% end %>
    </table>
<% end %>

<!--<h1>Detailed Schedule</h1>-->
<!--<hr/>-->
<div class="clearfix"></div>

<div class="panel-group" id="accordion">
  <% first = true %>
  <% @schedule_data.each do |event| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#<%= "#{event[:event_id]}" %>"><b><%= "#{event[:start_date].strftime(WEEKDAYFORMAT)}, #{event[:start_date].strftime(DATEFORMAT)}: " %></b><%= "#{event[:title]}" %>
            </a>
          </h3>
        </div>
        <% if first == true %> <%# default show first accordion panel open%>
            <div id="<%= "#{event[:event_id]}" %>" class="panel-collapse collapse in">
              <% first = false %>
        <% else %>
            <div id="<%= "#{event[:event_id]}" %>" class="panel-collapse collapse">
        <% end %>
        <div class="panel-body">
          <h4><b>Location: </b><%= "#{event[:room]}" %></h4>
          <h4>
            <b>Time: </b><%= "#{event[:start_date].strftime(TIMEFORMAT)} - #{event[:end_date].strftime(TIMEFORMAT)}" %>
          </h4>

          <% unless event[:sessions].blank? %>
              <% event[:sessions].each do |session| %>
                  <p>
                    <%= "#{session[:start_time]}" %> ||
                    <b><%= link_to session[:title], pdf.full_path(file: session[:pdf_link]), target: '_blank' %></b> ||
                    <% session[:author].each_with_index do |name, index| %>
                        <%= "#{name}" %> <i><%= "#{session[:affiliation][index]} " %></i>
                    <% end %> ||
                    <a data-toggle="collapse" href="#<%= "#{event[:event_id]}#{session[:paper_id]}Abstract" %>" aria-expanded="false" aria-controls="<%= "#{event[:event_id]}#{session[:paper_id]}Abstract" %>">
                      Abstract
                    </a>
                  </p>
                  <div class="collapse" id="<%= "#{event[:event_id]}#{session[:paper_id]}Abstract" %>">
                    <div class="panel panel-default">
                      <div class="panel-body">
                        <%= "#{session[:abstract]}" %>
                      </div>
                    </div>
                  </div>
              <% end %>
          <% end %>
        </div>
        </div>
        </div>
  <% end %>
  </div>
</div>
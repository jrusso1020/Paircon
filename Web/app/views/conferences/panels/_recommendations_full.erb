<h1>Paircon Recommendations</h1>
<hr />

<div class="clearfix"></div>
<div id="main-container" class="x_content">
<% if current_user.all_similarities_generated(@conference.id) %>
  <%= render 'conferences/panels/user_recommendations' %>
<% end %>
</div>

<% if !current_user.all_similarities_generated(@conference.id) %>
  <%= javascript_tag "requestUserRecommendations('" + @conference.id + "','" + current_user.id + "','true')" %>
<% end %>

<div class="x_panel top-buffer">
  <div class="x_title">
    <h3>Paircon Recommendations
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
    </h3>

    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <div class = "container">
      <div class ="col-lg-12 col-md-12 col-sm-12 col-xs-12 top-buffer text-center">
        <button class ="btn btn-primary">Update Recommendations</button>
      </div>
      <% $i = 1 %>
      <% $num = 15 %>
      <% until $i > $num  do %>
        <% percentage = 0.3 %>
          <div class ="col-md-4 col-sm-6 col-xs-6 top-buffer">
            <div class="usage-graph " style="transform: scale(1.2,1.2);">
              <div class="easypiechart" id="returningvisits" data-percent="<%= percentage.nan? ? 0 : (percentage*100).round(2) %>">
                <span class="percent"><%= percentage.nan? ? 0 : (percentage*100).round(2) %></span>
              </div>
              <label><%= link_to "Paper #{$i}", pdf.full_path(file: "/conference_papers/pdfs/#{@conference.id}/171.pdf") %><br>
                <!--<p>-->
                  <!--<a href="#"><i class="fa fa-thumbs-up right-buffer approve" aria-hidden="true"></i></a>-->
                  <!--<a href="#"><i class="fa fa-thumbs-down deny" aria-hidden="true"></i></a>-->
                <!--</p>-->
              </label>
            </div>
            <div class = "text-center">
              <p><b>Keywords: </b>Word 1, Word 2, Word 3 <br>
                <b>Related To: </b>Paper 1, Paper 2, Paper 3
              </p>
              <button class="btn btn-paircon btn-center" type="button" data-toggle="modal" data-target=<%= "##{$i}"%>>More</button>
            </div>
            <div class="modal fade rec_modal" id=<%= "#{$i}"%> tabindex="-1" role="dialog" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Paper <%="#{$i}"%>
                      <!--<a href="#"><i class="fa fa-thumbs-up right-buffer left-buffer approve" aria-hidden="true"></i></a>-->
                      <!--<a href="#"><i class="fa fa-thumbs-down deny" aria-hidden="true"></i></a>-->
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <div class ="container">
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <p><b>Authors: </b>Author Names</p>
                        <p><b>Year Published: </b>Year</p>
                        <p><b>Journal: </b> Journal Name</p>
                      </div>
                      <div class="col-md-6 col-sm-6 col-xs-12 text-center">
                        <p><a href="#"><i class="fa fa-file fa-4x" aria-hidden="true"></i><br>Open Paper</a></p>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-paircon" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>

    <% $i +=1; %>
    <% end %>
    </div>
  </div>




    <script>
        var count = 3 <%#= @drives.count >= 3 ? 3 : @drives.count %>;
        if (window.innerWidth < 768) {
            count = 2 <%#= @drives.count >= 2 ? 2 : @drives.count %>;
        }

        initCharts(count);
    </script>

    <%# end %>


</div>


<% partial_view = params[:view].blank? %>

<div class="<%= 'x_panel' if partial_view %>">
  <div class="<%= 'x_title' if partial_view %>">
    <h3 style="<%= 'font-size: 36px;' unless partial_view %>">Posts
      <% if partial_view %>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
          </ul>
      <% end %>
    </h3>

    <% unless partial_view %>
        <hr/>
    <% end %>
    <div class="clearfix"></div>
  </div>
  <div class="<%= 'x_content' if partial_view %>">
    <% if @post_count == 0 %>
        <%= render 'layouts/application/no_result', body: @conference.get_name + ' is yet to post any updates ...' %>
    <% else %>
        <div class="post_div">
          <!-- Populated via Ajax -->
        </div>
    <% end %>
  </div>
</div>

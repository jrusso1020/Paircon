<div class="x_panel">
  <div class="x_title">
    <h3>Posts
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
    </h3>

    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <% if @posts.blank? %>
        <div class="">
          <div style="width: 100%; text-align: center; font-style: italic;">
            <div><%= image_tag 'sad.png', style: 'opacity: 0.3; ', lazy: true %></div>
            <br />
            <div >You have not posted any updates yet. This panel will not be visible to Attendees until you populate it ...
            </div>
          </div>
        </div>
    <% else %>
      <%= render @posts, is_organizer: @is_organizer %>
    <% end %>
  </div>
</div>
<%= header_title @conference.get_name %>

<%= render 'header' %>

<div class="row">
  <div class="col-md-2 col-sm-2 col-xs-2">
    <ul class="nav nav-tabs tabs-left">
      <li class="active"><a href="#home" class="tab_ajax" data-toggle="tab" id="home">Home</a></li>
        <% if @is_organizer or (!@is_organizer and @post_count != 0) %>
          <div data-step="17" data-intro="Post any news here" data-position='right'>
            <li><a href="#posts" class="tab_ajax" id="posts" data-toggle="tab">Posts</a></li>
          </div>
        <% end %>
        <% if !@is_organizer and user_signed_in? %>
          <div data-step="16" data-intro="We recommend the conference for you" data-position='right'>
            <li>
              <a href="#recommendations" class="tab_ajax" data-toggle="tab" id="recommendations" data-toggle="tab">Recommendations</a>
            </li>
          </div>
        <% end %>
          <div data-step="15" data-intro="Upload publication of the speakers" data-position='right'>
            <li><a href="#papers" class="tab_ajax" id="papers" data-toggle="tab">Papers</a></li>
          </div>
        <% if @is_organizer or (!@is_organizer and @total_resources != 0 and @total_events != 0) %>
          <div data-step="14" data-intro="See the meeting schedule, you can drag the blocks" data-position='right'> 
            <li><a href="#schedule" class="tab_ajax" id="schedule" data-toggle="tab">Schedule</a></li>
          </div>
        <% end %>
          <div data-step="13" data-intro="Add more information" data-position='right'>
            <li><a href="#about_panel" id="about_panel" data-toggle="tab">About</a></li>
          </div>
        <hr/>
        <% if @is_organizer %>
            <li><%= link_to_modal 'Create Conference', new_conference_path() %></li>
        <% end %>
    </ul>
  </div>
  <div class="col-md-10 col-sm-10 col-xs-10"  div data-step="18" data-intro="Conference Information will display here" data-position='top'>
    <div id="progress">
      <h1 class="text-center">Loading ...</h1>
      <div class="cssload-thecube">
        <div class="cssload-cube cssload-c1"></div>
        <div class="cssload-cube cssload-c2"></div>
        <div class="cssload-cube cssload-c4"></div>
        <div class="cssload-cube cssload-c3"></div>
      </div>
    </div>

    <div class="tab-content">
      <div id="content"></div>
    </div>
  </div>
</div>

<%= javascript_tag "initializeTabPanes('" + @conference.id + "')" %>
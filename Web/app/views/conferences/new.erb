<%= header_title 'Create Conference' %>

<%= form_for Conference.new, url: conferences_path(), method: :posts do |f| %>
<div class="modal-header">
  <h1 class="modal-title" id="myModalLabel">
    <i class="fa fa-users" style="margin-right: 5px;" id="drive-header-icon"></i>
    Create Conference
  </h1>
</div>

<div class="modal-body">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <h4 class="font-light" align="center">You are about to create a new Conference page? Are you sure you want to continue?
      </h4>
    </div>
  </div>
</div>

<div class="modal-footer" style="margin-top:-5px;">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <% if request.xhr? %>
          <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>
      <% end %>
          <%= f.submit 'Continue', :class => 'form-control', :class => 'btn btn-paircon' %>
    </div>
  </div>
</div>
<% end %>

<script>
  // Create a cookies to store whether user has gone through tutorial (value = 1) or not (value = 0)
  if (Cookies.get('first_conference') != 1) {
      Cookies.set('first_conference', '0');
  }






</script>
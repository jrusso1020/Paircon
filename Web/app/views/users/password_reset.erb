<%= header_title 'Settings' %>

<script src='https://www.google.com/recaptcha/api.js'></script>

<%= form_for @user, url: update_email_password_user_path(@user.id), html: {method: 'POST', id: 'email_passwd_form'} do |f| %>
    <div class="modal-header">
      <h1 class="modal-title" id="myModalLabel">
        <i class="fa fa-lock" style="margin-right: 5px;" id="drive-header-icon"></i>
        Change Password
      </h1>
    </div>

    <div class="modal-body">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="form-group">
            <%= label 'current_password', '', 'Current Password' %>
            <%= f.password_field :current_password, class: 'form-control', placeholder: 'Enter current password' %>
          </div>
          <div class="form-group">
            <%= label 'new_password', '', 'New Password' %>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Enter new password' %>
          </div>
          <div class="form-group">
            <%= label 'confirm_password', '', 'Confirm Password' %>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Verify new password' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="form-group" align="center">
            <%= render 'recaptcha' %>
            <%= recaptcha_tags ajax: true, :display => {:theme => 'custom'} %>
          </div>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <% if request.xhr? %>
          <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>
      <% end %>

      <%= f.submit 'Proceed', class: 'btn btn-paircon' %>
    </div>
<% end %>

<%= javascript_tag 'initializeUserPasswordReset()' %>

<%= header_title 'Settings' %>

<%= form_for @user, url: request_organizer_user_path(@user.id), html: {method: 'POST', id: 'organizer_request_form'} do |f| %>
    <div class="modal-header">
      <h1 class="modal-title" id="myModalLabel">
        <i class="fa fa-user" style="margin-right: 5px;" id="drive-header-icon"></i>
        Become Organizer
      </h1>
    </div>

    <div class="modal-body">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <h4 class="font-light" align="center">Do you really want to request Organizer Access?
          </h4>
        </div>
      </div>
    </div>

    <div class="modal-footer" style="margin-top:-5px;">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <% if !is_mobile_device? %>
          <span style="float: left !important; margin-top: 5px;">
            <small>Note: This operation is permanent
              and cannot be
              reversed later.
            </small>
          </span>
          <% end %>
          <% if request.xhr? %>
              <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>
          <% end %>
          <%= f.submit 'Become Organizer', :class => 'form-control', :class => 'btn btn-paircon' %>
        </div>
      </div>
    </div>
<% end %>

<%= javascript_tag 'initializeUserOrganizer()' %>

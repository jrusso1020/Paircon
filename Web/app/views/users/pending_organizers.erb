<%= header_title 'Approve Organizers' %>

<div class="x_panel top-buffer">
  <div class="x_title">
    <h3>Pending Organizers
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
    </h3>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table id="datatable-pendingOrganizer" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline">
      <thead>
      <tr role="row">
        <th>User Name</th>
        <th>Contact</th>
        <th>User Organization</th>
        <th>User Industry</th>
        <th>Approve</th>
      </tr>
      </thead>
      <tbody>
      <% @pending_organizers.each do |organizer| %>
          <tr>
            <td><%= organizer.full_name %></td>
            <td><%= organizer.email %></td>
            <td><%= organizer.user_industry.blank? ? 'N/A': organizer.user_industry  %></td>
            <td><%= organizer.user_organization %></td>
            <td><button id='<%= organizer.id %>' class="organizer-approval btn btn-paircon" type="button" >Approve</button></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="x_panel">
  <div class="x_title">
    <h3>Approved Organizers
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
    </h3>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table id="datatable-approvedOrganizer" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline">
      <table class="table table-striped table-bordered">
        <thead>
        <tr role="row">
          <th>User Name</th>
          <th>Contact</th>
          <th>User Organization</th>
          <th>Date Approved</th>
        </tr>
        </thead>
        <tbody>
        <% @approved_organizers.each do |organizer| %>
            <tr>
              <td><%= organizer.full_name %></td>
              <td><%= organizer.email %></td>
              <td><%= organizer.user_organization %></td>
              <td><%= organizer.updated_at %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>

<%= javascript_tag "initializePendingOrganizer()" %>
<%= javascript_tag "showApprovedOrganizer()" %>
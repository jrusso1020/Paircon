
<table id = "datatable-papers" class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Author</th>
    <th>Publication</th>
    <th>Keywords</th>
    <th>Link</th>
    <th><th>
  </tr>
  </thead>
  <% $i = 1 %>
  <tbody>
  <% papers_by_conference(conference_id).each do |paper| %>
      <tr>
        <th scope="row"><%= "#{$i}"%></th>
        <td><%= paper.title %></td>
        <td><%= paper.author%></td>
        <td><%= paper.year%></td>
        <td><%= paper.keywords%></td>
        <td><%= link_to paper.pdf_file_name, paper.pdf.url, target: '_blank' %></a></td>
        <td>
        <ul class="nav navbar-right panel_toolbox">
          <% if @is_organizer %>
              <li style="margin-top: -6px;"><%= link_to_modal icon_text('trash', ''), delete_paper_path(paper) %></li>
          <% end %>
          <li></li>
        </ul></td>
      </tr>
      <% $i +=1; %>
  <% end %>
  </tbody>
</table>
<body>
<div class="loader"></div>
  <!--HEADER-->
  <div class="header">
    <div class="bg-color">
      <header id="main-header">
        <nav class="navbar navbar-default navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Pair<span class="logo-dec">Con</span></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
              <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="#main-header">Home</a></li>
                <li class=""><a data-no-pjax href="#service">Features</a></li>
                <li class=""><a data-no-pjax href="#about">About Us</a></li>
                <li class=""><a data-no-pjax href="#login">Login</a></li>
                <li class=""><a data-no-pjax href="#blog">Blog</a></li>
                <li class=""><a data-no-pjax href="#contact">Contact Us</a></li>
              </ul>
            </div>
          </div>
        </nav>
      </header>



      <div class="wrapper">
        <div class="container">
          <div class="row">
            <div class="col-sm-12 banner-info text-center wow fadeIn delay-05s">
              <h1 class="bnr-sub-title">Welcome to Pair<span class="logo-dec">Con</span></h1>
            </div>
          </div>

          <div class ="row">
            <div class="col-md-6 col-sm-12" style="padding-top:5%">
                <h1 class="text-center">A Better Conference.</h1>
                <h3 class="bnr-para text-center">Get started for free!<br>
                  Optimize your conference experience. </h3>
              <!--<div class="brn-btn">-->
                <!--<a href="#" class="btn btn-download">Sign Up</a>-->
                <!--<a href="#login" class="btn btn-more">Login</a>-->
              <!--</div>-->
            </div>

            <!-- Login Section -->
            <div class="col-md-4 col-sm-12">
              <div>
                <% init_error_flash_for_login %>
                <div class="custom-flash-info alert alert-fixed alert-info alert-dismissable" id="error_callout"
                     style="opacity: <%= flash[:alert].blank? ? '0' : '1' %>;">
                  <button class="close" type="submit" style="position: static; opacity: 1; font-size: 14px;">
                    <i class="fa fa-times fa-fw paircon-custom"></i></button>
                  <i class="fa fa-info fa-fw paircon-custom"></i>
                  <span class="paircon-custom"><%= raw flash[:alert] %></span>
                </div>
                <% flash[:alert] = nil %>
              </div>
              <div>
                <div>
                  <div data-pjax-container id="loginbox">
                    <%= yield %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<!DOCTYPE html>
<html>
<% @page_title = 'Sign Up' %>
<%= render 'layouts/application/header' %>

<body class="nav-md footer_fixed">
<%#= render 'layouts/flash_message' %>

<div class="container body footer_fixed">
  <div class="main_container">
    <%= render 'layouts/application/signup_top_nav' %>

    <div id="main-form" class="form-group flex-autoresize-middle">
      <div class="col-md-10 col-sm-12 col-xs-12 col-md-offset-1 full-height">
        <div class="x_panel">
          <!--<div class="x_title">-->
          <!--<h2>Form Wizards-->
          <!--<small>Sessions</small>-->
          <!--</h2>-->
          <!--<div class="clearfix"></div>-->
          <!--</div>-->
          <div class="x_content">

            <!-- Smart Wizard -->
            <!--<p>This is a basic form wizard example that inherits the colors from the selected scheme.</p>-->
            <div id="wizard" class="form_wizard wizard_horizontal display-flex-column full-height">
              <ul class="wizard_steps anchor" style="display: flex;">
                <li class="flex-grow">
                  <a href="#step-1" class="selected" isdone="1" rel="1">
                    <span class="step_no">1</span>
                    <span class="step_descr">Welcome To PairCon<br></span>
                  </a>
                </li>
                <li class="flex-grow">
                  <a href="#step-2" class="selected" isdone="0" rel="2">
                    <span class="step_no">2</span>
                    <span class="step_descr">Personal Information<br></span>
                  </a>
                </li>
                <li class="flex-grow">
                  <a href="#step-3" class="disabled" isdone="0" rel="3">
                    <span class="step_no">3</span>
                    <span class="step_descr">Profile Picture<br></span>
                  </a>
                </li>
              </ul>


              <div class="stepContainer full-height">

                <div id="step-1" class="content full-height display-flex-column" style="display: none;">
                  <div class="flex-autoresize-middle flex-y-scroll" style="margin-bottom: 50px;">
                    <div class="row">
                      <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                        <h1 class="text-center">Welcome To PairCon!</h1>
                        <h3 class="text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam tempus
                          viverra dui, sed pharetra ligula scelerisque vitae. Quisque sodales dolor fringilla cursus
                          auctor. Etiam sagittis eu sem ac dictum. Maecenas at dolor nisi. Interdum et malesuada fames
                          ac
                          ante ipsum primis in faucibus. Morbi eu dolor enim. Integer dignissim consequat placerat.</h3>
                      </div>
                    </div>
                  </div>
                </div>
                <div id="step-2" class="content full-height display-flex-column" style="display: none;">
                  <%= form_for(@user, html: {id: 'new_user_registration', class: 'user_registration_form flex-autoresize-middle flex-y-scroll', multipart: true}) do |f| %>
                      <%= hidden_field_tag :referer, params[:referer] %>
                      <h1 class="text-center">Personal Information</h1>
                      <h3 class="text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam tempus
                        viverra dui, sed pharetra ligula scelerisque vitae. Quisque sodales dolor fringilla cursus
                        auctor. Etiam sagittis eu sem ac dictum. Maecenas at dolor nisi. Interdum et malesuada fames ac
                        ante ipsum primis in faucibus. Morbi eu dolor enim. Integer dignissim consequat placerat.</h3>
                      <div class="row signup-row" id="user_form_row">
                        <div class="col-md-8 col-sm-8 col-xs-12 col-md-offset-2 col-sm-offset-2">
                          <div style="margin-top: 0px;" class="signin_verticalcenter">
                            <h3 class="input-label">Name (*)</h3>

                            <div class="row">
                              <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                  <%= f.text_field :first_name, placeholder: 'First Name',
                                                   class: 'form-control form-signup-control', id: 'first_name' %>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                  <%= f.text_field :last_name, placeholder: 'Last Name',
                                                   class: 'form-control form-signup-control', id: 'last_name' %>
                                </div>

                                <a class="custom-tooltip hidden-sm-down" id="nameTooltip">
                                  <span style="margin-top: -10px;" class="step-signup-tooltip callout right">Your name that will appear to people at PairCon</span>
                                </a>
                              </div>
                            </div>

                            <h3 class="input-label signup-input-label">Email Address (*)</h3>
                            <div class="row">
                              <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                  <%= f.text_field :email, placeholder: 'Email Address',
                                                   :class => 'form-control form-signup-control', disabled: 'disabled', style: 'opacity: 0.5' %>
                                </div>

                                <a class="custom-tooltip hidden-sm-down" id="nameTooltip">
                                  <span style="margin-top: -10px;" class="step-signup-tooltip callout right">You will need this when you log in or you ever need to reset password</span>
                                </a>
                              </div>
                            </div>

                            <% unless Identity.find_by_user_id(current_user.id).nil? %>
                                <h3 class="input-label signup-input-label">Password (*)</h3>
                                <div class="row">
                                  <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                      <%= f.password_field :password, :autocomplete => 'true', :class => 'form-control', placeholder: "Password" %>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                      <%= f.password_field :password_confirmation, :autocomplete => 'true', :class => 'form-control', placeholder: "Confirm Password" %>
                                    </div>

                                    <a class="custom-tooltip hidden-sm-down" id="passwordTooltip">
                                      <span class="step-signup-tooltip callout right">Please enter your password</span>
                                    </a>
                                  </div>
                                </div>
                            <% end %>

                            <h3 class="input-label signup-input-label">Gender (*)</h3>
                            <div class="row">
                              <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                  <%= f.select :gender, [['Male', 1], ['Female', 0]], {}, :class => 'form-control form-signup-control' %>
                                </div>

                                <a class="custom-tooltip hidden-sm-down" id="countryGenderTooltip">
                                  <span style="margin-top: -10px;" class="step-signup-tooltip callout right">What is your gender?</span>
                                </a>
                              </div>
                            </div>

                            <h3 class="input-label signup-input-label">Phone Number</h3>
                            <div class="row">
                              <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                  <%= f.text_field :phone_number, :id => 'phoneNumber', placeholder: 'Phone Number', :class => 'form-control form-signup-control' %>
                                </div>

                                <a class="custom-tooltip hidden-sm-down" id="phoneTooltip">
                                  <span style="margin-top: -10px;" class="step-signup-tooltip callout right">We'll use your phone number to send a verification code if we need to verify your identity</span>
                                </a>
                              </div>
                            </div>


                          </div>
                        </div>
                      </div>
                      </div>
                      <div id="step-3" class="content full-height display-flex-column" style="display: none;">
                        <div class="flex-autoresize-middle flex-y-scroll" style="margin-bottom: 50px;">
                          <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                              <h1 class="text-center">Profile Picture</h1>
                              <h3 class="text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam
                                tempus
                                viverra dui, sed pharetra ligula scelerisque vitae. Quisque sodales dolor fringilla
                                cursus
                                auctor. Etiam sagittis eu sem ac dictum. Maecenas at dolor nisi. Interdum et malesuada
                                fames
                                ac
                                ante ipsum primis in faucibus. Morbi eu dolor enim. Integer dignissim consequat
                                placerat.</h3>
                            </div>
                          </div>
                          <div class="row" style="margin-top:20px;">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                              <div class="profile-image dropzone " data-width="300" data-ghost="false"
                                   data-canvas="false" data-originalsize="false" data-height="300"
                                   data-url="/users/<%= current_user.id %>/save_logo" data-image="<%= asset_path(current_user.profile_photo) %>"
                                   data-removeurl="/users/<%= current_user.id %>/destroy_logo">
                                <input class="invisible" id="profile-image-upload" type="file" name="thumb" accept="image/*"/>
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                              <button id="upload_image_btn"
                                      class="btn btn-paircon btn-label btn-profile btn-padding" style="margin-top:20px;">
                                <i class="fa fa-upload"></i> Upload Image
                              </button>
                            </div>
                          </div>

                          <div class="row" style="margin-top: 50px;">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                              <input type="checkbox" class="checkbox-center" id="termsConditionCheckbox">
                              &ensp;&ensp;I have <strong>Read</strong> and <strong>Agree</strong> to PairCon's
                              <strong><a href="<%= PairConConfig::url['terms'] %>" target="_blank">Terms of
                                Use</a></strong>
                              and
                              <strong><a href="<%= PairConConfig::url['privacy'] %>" target="_blank">Privacy
                                Policy</a></strong>.

                            </div>
                          </div>

                        </div>


                      </div>
                  <% end %>
                  </div>

            </div>
            <!-- End SmartWizard Content -->
          </div>

          <div class="row" id="finalstep" style="display: none;">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div style="margin-top: 50px;">
                <h1 class="text-center">Please wait while we set up your PairCon account</h1>
                <%= image_tag 'spinner.gif', class: 'img-full center-image', style: 'width: 80px; margin-top: 30px;' %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

    <%= render 'layouts/application/footer' %>
  </div>
</div>

<%= javascript_tag 'initSignup()' %>

</body>
</html>
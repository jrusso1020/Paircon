<% page_title('Recover Password') %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:class => 'form-horizontal', id: 'new_user_password'}) do |form| %>


    <%= content_tag :div, class: 'panel-body' do %>
        <%= content_tag :h2, 'Password Recovery', style: 'margin-bottom: 25px; margin-top: 5px;' %>
        <%= content_tag :p, 'Enter your e-mail address below and we will send you instructions of recovering your account.', style: 'margin-top:-20px' %>
    <% end %>

    <%= content_tag :div, class: 'input-group', style: 'margin-top:0px;' do %>
        <%= content_tag :span, content_tag(:i, '', class: 'fa fa-envelope'), class: 'input-group-addon' %>
        <%= form.email_field :email, placeholder: 'Email Address', class: 'form-control' %>
    <% end %>

    <%= content_tag :div, class: 'form-actions clearfix' do %>
        <%= content_tag :div, link_to('Click to Login', new_session_path(resource_name, anchor: 'login')), class: 'pull-left' %>
        <%= content_tag :div, link_to('Sign Up', new_registration_path(resource_name, anchor: 'login')), class: 'pull-right' %>
        <%= form.submit 'Reset Password', :class => 'btn btn-block btn-paircon' %>
    <% end %>
<% end %>

